<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@drawable/summertimessaga110_ic_background"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="3">

    <FrameLayout

        android:id="@+id/fl_adplaceholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/qreka"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/summertimessaga110_qc" />

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15.0dip"
                android:gravity="center"
                android:text="Remember, I'm Here To Help Whenever You Need Me Again! "
                android:textColor="@color/white"
                android:textSize="20dip"
                android:textStyle="bold" />

            <com.airbnb.lottie.LottieAnimationView
                style="@style/Theme.summersaga.Lottie1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="270dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Solving Mysteries, Building Relationships.! "
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold" />


                <com.airbnb.lottie.LottieAnimationView
                    style="@style/Theme.summersaga.Lottie2"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true" />

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/visitr"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:backgroundTint="#fff"
                    android:gravity="center"
                    android:text="Exit App"
                    android:textColor="@color/blackk"
                    android:textSize="17dp"
                    app:strokeColor="@color/white"
                    app:strokeWidth="2dp" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <FrameLayout
        android:id="@+id/fl_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/summertimessaga110_qb1"
        android:gravity="bottom"
        android:visibility="visible">

    </FrameLayout>
</LinearLayout>